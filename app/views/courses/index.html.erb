<%= render 'layouts/dashboardheader' %>

<%= render 'shared/instructor_sidebar' %>

<div class="fullcontainer"><br>
  <div class="row">
    <div class="col-md-10"><h2>Your Courses</h2></div>
    
    <div class="col-md-10">
      <table class="table table-striped table-bordered" cellspacing="0" width="100%">
    		<thead>
					<tr>
						<th>トップ画像</th>
						<th>Title</th>
						<th>価格</th>
						<th>公開？</th>
            <th>Edit Course</th>
            <th>Course Preview</th>
            <th>Edit Sections</th>
					</tr>
				</thead>

				<tfoot>
					<tr>
						<th>トップ画像</th>
						<th>Title</th>
						<th>価格</th>
						<th>公開？</th>
            <th>Edit Course</th>
            <th>Course Preview</th>
            <th>Edit Sections</th>
					</tr>
				</tfoot>
        
        <% @courses.each do |course| %>
				  <tbody>
					  <tr>
					    
						  <td><%= image_tag thumbnail_url(course) %></td>
						  <td><%= course.title %></td>
						  <td><%= course.price %></td>
						  <td><%= course.active %></td>
              <td><!-- コース編集部分　-->
                <%= link_to edit_course_path(course) do %>
                  <button class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
                <% end %>
              </td>
              
              <td><!-- コースプレビュー部分　-->
                <%= link_to course_path(course) do %>
                  <button class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-eye-open"></span></button>
                <% end %>
              </td>
              
              <td><!-- セクション一覧へ　-->
                <%= link_to course_sections_path(course) do %>
                  <button class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
                <% end %>
              </td>
              
					  </tr>
				  </tbody>
				<% end %>
				
			</table>
			
			<%= link_to "新規コースを作成する", new_course_path, class: "btn btn-info" %>
    </div>
	</div>
</div>