<%= render 'layouts/navigation' %>

<!--  セクションタイトル　-->
<header class="section-hd-image">
  <div class="section-headline">
    <h2><%= @section.title %></h2>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <%= markdown(@section.content) %>
    </div>

    <div class="col-md-3">
      <div class="list-group" data-no-turbolink>
		    <% @sections.order(:number).each do |section| %>
			    <% if section.header %>
				    <div class="list-group-item active">
					    <i class="mdi-social-school"> <%= section.title %></i>
						</div>
					<% else %>
					  <%= link_to [section.course, section], class: "list-group-item" do %>
					    <%= section.title %>
					  <% end %>
					<% end %>
				<% end %>
      </div>
    </div>
  </div>
</div>
