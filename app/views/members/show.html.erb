<%= render 'layouts/navigation' %>

<header class="profile-hd-image">
  <div class="profile-headline">
    <h2>生徒Profile</h2>
  </div>
</header>

<div class="container">
<div class="row">
  <div class="col-md-3">
    <%= image_tag avatar_url(@member), class: "avatar-full" %>
    <div class="panel panel-default">
      <div class="panel-heading">(生徒)登録情報</div>        
      <div class="panel-body">
        所属: <%= @member.company_name %><br>
      </div>
    </div>
  </div>

  <div class="col-md-9">
    <h2><%= @member.fullname %></h2>
    <div class="description row-space-3">
      <%= @member.profile %>
    </div>
  </div>
</div></div>